{
    "routes": [
        {
            "route": "/*",
            "allowedRoles": [
                "probarole"
            ]
        }
    ],
    "navigationFallback": {
        "rewrite": "index.html",
        "exclude": [
            "/images/*.{png,jpg,gif,ico}",
            "/*.{css,scss,js}"
        ]
    },
    "responseOverrides": {
        "401": {
            "redirect": "/.auth/login/aad",
            "statusCode": 302
        }
    },
    "auth": {
        "identityProviders": {
            "azureActiveDirectory": {
                "registration": {
                    "openIdIssuer": "https://login.microsoftonline.com/84f23681-77b8-4f9f-84e6-c0d3c32018b5/v2.0",
                    "clientIdSettingName": "APP_CLIENT_ID",
                    "clientSecretSettingName": "APP_CLIENT_SECRET"
                }
            }
        }
    },
    "globalHeaders": {
        "Cache-Control": "no-cache"
    }
}
